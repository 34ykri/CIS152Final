@model LinkedList<Character>
@{
    ViewData["Title"] = "Sort by Vision";
}

<div class="row">
    <div class="col-sm-2">
        <h3 class="mt-3">Sort by</h3>
        <div class="list-group">
            <a asp-action="Index" class="list-group-item">Element</a>
            <a asp-action="Index" class="list-group-item">Weapon</a>
            <a asp-action="Index" class="list-group-item">Region</a>
        </div>
    </div>
    <div class="col-sm-10">
        <div class="text-center">
            <h3 class="display-6">Character Viewer</h3>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Vision</th>
                    <th>Weapon</th>
                    <th>Last Seen</th>
                    <th>Region</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var character in Model)
                {
                    <tr>
                        <td><img src="~/images/@character.ImageName" width="100" height="100" alt="Picture of @character.Name" title="Picture of @character.Name" /></td>
                        <td>@character.Name</td>
                        <td>@character.Vision</td>
                        <td>@character.Weapon</td>
                        <td>@character.LastSeen</td>
                        <td>@character.Region</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
